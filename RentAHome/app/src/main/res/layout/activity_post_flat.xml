<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/SignUpShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/backgroundColor2"
            android:layout_marginTop="10dp"
            android:text="Post Your Flat"
            android:textSize="20dp"
            android:textStyle="italic|bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:textColor="#0A8BF1"
            android:text="Add Image:"
            android:layout_marginHorizontal="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            ></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/room1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/editaddpic"
                android:src="@drawable/addpic">

            </ImageView>
            <ImageView
                android:id="@+id/room2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/editaddpic"
                android:src="@drawable/addpic">

            </ImageView>
            <ImageView
                android:id="@+id/room3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/editaddpic"
                android:src="@drawable/addpic">

            </ImageView>
            <ImageView
                android:id="@+id/room4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/editaddpic"
                android:src="@drawable/addpic">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/postloaction"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:textSize="35px"
                android:gravity="center"
                android:hint="Loaction Via Map"
                android:textColorHint="#039BE5"
                android:textColor="@color/colorText"
                android:background="@drawable/editaddpic"
                />

            <Button
                android:id="@+id/postlocationbtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:background="@drawable/buttoncolor"
                android:text="Set"
                android:textStyle="bold"
                android:textColor="#FBFBFB"
                >

            </Button>
        </LinearLayout>

        <EditText
            android:id="@+id/postNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editaddpic"
            android:gravity="center"
            android:hint="Contact Number"
            android:textColor="@color/colorText"
            android:textColorHint="#039BE5"
            android:inputType="phone"
            android:textSize="35px" />

        <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginTop="10dp">
     <EditText
         android:id="@+id/postFloorNo"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_marginHorizontal="10dp"
         android:textSize="25px"
         android:textStyle="bold"
         android:gravity="center"
         android:hint="Floor"
         android:textColorHint="#039BE5"
         android:textColor="@color/colorText"
         android:background="@drawable/editaddpic"
         />
     <EditText
         android:id="@+id/postHouseNo"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_marginLeft="150dp"
         android:layout_marginHorizontal="10dp"
         android:textSize="25px"
         android:textStyle="bold"
         android:gravity="center"
         android:hint="House No"
         android:textColorHint="#039BE5"
         android:textColor="@color/colorText"
         android:background="@drawable/editaddpic"
         />
 </LinearLayout><LinearLayout
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginTop="10dp">
     <EditText
         android:id="@+id/postRoadNo"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_marginHorizontal="10dp"
         android:textSize="25px"
         android:textStyle="bold"
         android:gravity="center"
         android:hint="Road"
         android:textColorHint="#039BE5"
         android:textColor="@color/colorText"
         android:background="@drawable/editaddpic"
         />
     <EditText
         android:id="@+id/postAreaName"
         android:layout_width="150dp"
         android:layout_height="40dp"
         android:layout_marginLeft="150dp"
         android:layout_marginHorizontal="10dp"
         android:textSize="25px"
         android:textStyle="bold"
         android:gravity="center"
         android:hint="Area"
         android:textColorHint="#039BE5"
         android:textColor="@color/colorText"
         android:background="@drawable/editaddpic"
         />
 </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Bedroom:"
                android:textColor="#039BE5"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30px">

            </TextView>
            <Spinner
                android:id="@+id/spinnerbed"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/editaddpic"
                android:spinnerMode="dropdown"
                android:entries="@array/Weight">

            </Spinner>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Storeroom:"
                android:textColor="#039BE5"
                android:layout_marginStart="40dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30px">

            </TextView>
            <Spinner
                android:id="@+id/spinnerstore"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:entries="@array/Weight"
                android:spinnerMode="dropdown"
                android:background="@drawable/editaddpic">

            </Spinner>

        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Washroom:"
            android:textColor="#039BE5"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30px">

        </TextView>
        <Spinner
            android:id="@+id/spinnerwash"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:entries="@array/Weight"
            android:spinnerMode="dropdown"
            android:background="@drawable/editaddpic">

        </Spinner>
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Kitchen:"
            android:textColor="#039BE5"
            android:layout_marginStart="40dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30px">

        </TextView>
        <Spinner
            android:id="@+id/spinnerkitchen"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:entries="@array/Weight"
            android:spinnerMode="dropdown"
            android:background="@drawable/editaddpic">

        </Spinner>

    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Veranda:"
            android:textColor="#039BE5"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30px">

        </TextView>
        <Spinner
            android:id="@+id/spinnerveranda"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:entries="@array/Weight"
            android:spinnerMode="dropdown"
            android:background="@drawable/editaddpic">

        </Spinner>


    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkdrawing"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Drawing"
            android:layout_marginStart="2dp"
            android:textColor="#039BE5"
            >

        </CheckBox>

        <CheckBox
            android:id="@+id/checkdining"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Dining"
            android:layout_marginStart="2dp"
            android:textColor="#039BE5"
            >

        </CheckBox>
        <CheckBox
            android:id="@+id/checklift"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Lift Facility"
            android:layout_marginStart="2dp"
            android:textColor="#039BE5"
            >

        </CheckBox>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/checkbachelor"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Bachelor Allowed"
                android:layout_marginStart="19dp"
                android:textColor="#039BE5"
                >

            </CheckBox>

            <CheckBox
                android:id="@+id/checkcaretaker"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Care Taker"
                android:layout_marginStart="2dp"
                android:textColor="#039BE5"
                >

            </CheckBox>



        </LinearLayout>
        <EditText
            android:id="@+id/postrentingPrice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="35px"
            android:gravity="center"
            android:hint="Renting Price"
            android:inputType="number"
            android:textColorHint="#039BE5"
            android:textColor="@color/colorText"
            android:background="@drawable/editaddpic"
            /><EditText
        android:id="@+id/postDescription"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="35px"
        android:gravity="center"
        android:hint="Short Description"
        android:textColorHint="#039BE5"
        android:textDirection="ltr"
        android:textColor="@color/colorText"
        android:background="@drawable/editaddpic"
        />
        <Button
            android:id="@+id/postMyFlat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttoncolor"
            android:text="Post flat"
            android:textColor="#FDFCFC"
            android:textStyle="bold">

        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </LinearLayout>



    </LinearLayout>
</ScrollView>